<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_level_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fbutton_color_midnight_blue"
    tools:context="com.example.asad.snakesandladders.LevelSelector">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fbutton_color_concrete"
        android:text="Snakes and Ladders"
        android:id="@+id/gametitle"
        android:textSize="50sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fbutton_color_concrete"
        android:text="Select Level and Hit Play"
        android:textSize="20sp"
        android:layout_below="@+id/gametitle"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
    <com.etiennelawlor.discreteslider.library.ui.DiscreteSlider
        android:id="@+id/discrete_slider"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_gravity="bottom"
        app:backdropStrokeWidth="1dp"
        app:horizontalBarThickness="4dp"
        app:tickMarkCount="5"
        app:tickMarkRadius="8dp"
        app:position="0"
        app:thumb="@drawable/thumb"
        app:progressDrawable="@drawable/transparent_progress_drawable"
        android:layout_below="@+id/gametitle"
        android:layout_marginTop="60dp"
        />
    <RelativeLayout
        android:layout_below="@+id/discrete_slider"
        android:layout_width="match_parent"
        android:id="@+id/slider_labels"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:paddingStart="30dp"
            android:textSize="20sp"
            android:text="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:paddingStart="162dp"
            android:textSize="20sp"
            android:text="2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:paddingStart="291dp"
            android:textSize="20sp"
            android:text="3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:paddingStart="420dp"
            android:textSize="20sp"
            android:text="4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:paddingStart="547dp"
            android:textSize="20sp"
            android:text="5"/>
    </RelativeLayout>
    <info.hoang8f.widget.FButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/gametitle"
        fbutton:buttonColor="@color/fbutton_color_concrete"
        fbutton:shadowColor="@color/fbutton_color_asbestos"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:layout_marginTop="170dp"
        android:text="Play!"
        android:textColor="@color/grey_900"
        android:id="@+id/play_btn"
        android:layout_centerHorizontal="true"
    />
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fbutton_color_clouds"

            android:textSize="15sp"
            android:text="Asad Salman"
            />
    </com.facebook.shimmer.ShimmerFrameLayout>
</RelativeLayout>
